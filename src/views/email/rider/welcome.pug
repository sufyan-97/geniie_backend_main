extends ../layout/index.pug 

block append contentStyle
    style(type='text/css').
        .section {
        }
        .section_head {
            text-align: center;
        }
        .section_head .welcome_logo {
            width: 70%;
        }

        .section_body {
            text-align: center;
        }
        .section_body .setup_business {
            letter-spacing: 0px;
            color: #01A1E8;
        }

        .section_body .body_para {
        }
        .section_body .body_para .use_link a {
            font-weight: bold;
            letter-spacing: 0px;
            color: #FD9616;
            text-decoration: none;
        }
        .section_body .body_para .sign_up {
            font-weight: bold;
            letter-spacing: 0px;
            color: #10100F;
        }
        .section_body .browser-para {
            margin-top: 30px;
            text-align: center;
            letter-spacing: 0px;
            color: #10100F;
        }
        
        .section_body .link a {
            letter-spacing: 0px;
            color: #01A1E8;
        }

        .section_foot {
            text-align: center;
            width: 100%;
        }
        .section_foot p.bordered {
            margin-left: auto;
            margin-right: auto;
            background: #01A1E800 0% 0% no-repeat padding-box;
            border: 3px dashed #01A1E8;
            border-radius: 8px;
            opacity: 1;
            padding: 2px 5px 5px 2px;
            color: #01A1E8;
            width: 25%;
        }

block append section
    .section
        .section_head
            img.welcome_logo(src=`${host}/images/welcome.png` alt='logo')
        .section_body
            h2.setup_business Let's Setup Business
            p.body_para
                span.use_link 
                    a(href=`${mainURL}`) Use this link 
                span.sign_up
                    | to carry
                    | on with
                    | your sign-up.
            p.browser-para Link not working? just paste the link below into your browser.
            .link
                a(href=`${mainURL}`) #{mainURL}
        .section_foot
            h2 Account details
            p Your temporary password is
            p.bordered #{password}
